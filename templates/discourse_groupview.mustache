{{!
    @template discourse/discourse_view

    Example context (json):
    {
        "comment": "Example comment for the context"
    }
}}

{{#js}}
{{/js}}

<div class="discourse-groupview container-fluid">
    {{#group}}
        <div class="row">
            <strong class="col-md-12 text-center">{{name}}</strong>
        </div>
        <div class="row">
            <span class="col-md-4">
                TeilnehmerInnen: <br>
                {{#participants}} {{{profilelink}}}  <br> {{/participants}}
            </span>
            <span class="col-md-4">
                {{#submission.id}} Abgegeben {{#userdate}}{{submission.timecreated}}, {{#str}} strftimedate {{/str}}{{/userdate}} {{/submission.id}}
                {{^submission.id}} Nicht abgegeben {{/submission.id}}
            </span>
            <span class="col-md-4">
                {{#submission.currentversion}} Version {{submission.currentversion}} {{/submission.currentversion}}
                {{^submission.currentversion}} Keine Version {{/submission.currentversion}}
            </span>
        </div>
        <div class="row">
            {{#submission.id}}<strong class="col-md-4">Einreichung:</strong>{{/submission.id}}
            {{^submission.id}}<strong class="col-md-4">Noch keine Einreichung abgegeben</strong>{{/submission.id}}
            <span class="col-md-8">
                {{#submission.id}} {{{submission.submission}}} <button class="btn btn-primary" data-toggle="collapse" data-target=".collapseSubmissionForm" aria-expanded="false" aria-controls="collapseSubmissionForm">Bearbeiten</button>{{/submission.id}}
                {{^submission.id}} <button class="btn btn-primary" data-toggle="collapse" data-target=".collapseSubmissionForm" aria-expanded="false" aria-controls="collapseSubmissionForm">Abgeben</button>{{/submission.id}}
            </span>
        </div>

    {{/group}}

    <br>

    <div class="collapse collapseSubmissionForm">
        {{{form}}}
    </div>
</div>